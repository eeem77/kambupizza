---
import { string } from "astro/zod";
import { Image } from "astro:assets";

export interface Props {
  urlimage: ImageMetadata;
  title: string;
  text: string;
}

const { urlimage, title, text } = Astro.props;

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<div
  class="flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-gray-800 md:flex-row"
>
  <Image
    class="h-96 w-full rounded-t-lg object-cover md:h-auto md:!rounded-none md:!rounded-l-lg"
    src={urlimage}
    widths={widths}
    sizes={sizes}
    loading="eager"
    alt="Kambu Pizza"
  />
  <div class="flex flex-col justify-start p-6">
    <h5 class="mb-2 font-extrabold text-4xl  dark:text-slate-300 text-center">
      {title}
    </h5>
    <p class="mb-4 font-extrabold text-neutral-600 text-base dark:text-neutral-200 text-center">
      {text}
    </p>
  </div>
</div>
